import java.io.*;
import java.util.*;
import java.lang.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int base=s.nextInt();
        int height=s.nextInt();
        int s1=s.nextInt();
        int s2=s.nextInt();
        int s3=s.nextInt();
        float area=1/2.0f*base*height;
        float peri=s1+s2+s3;
        System.out.printf("Area of Triangle is %.2f",area);
        System.out.printf("\nPerimeter of Triangle is %.2f",peri);
        
    }
}
