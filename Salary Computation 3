import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int salary=s.nextInt();
        if(salary<15000){
        float HRA=(float)15/100*salary;
        float DA=(float)90/100*salary;
            System.out.printf("%.2f",salary+HRA+DA);
        }
        else if(salary>=15000){
            int HRA1=5000;
            int DA1=(98/100)*salary;
            System.out.printf("%.2f",salary+HRA1+DA1);
        }
    }
}
